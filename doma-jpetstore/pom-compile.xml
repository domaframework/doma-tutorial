<project name="doma-tutorial-compile" basedir=".">

    <property name="build" value="target/classes"/>
    <property name="apt_generated" value="target/apt_generated"/>
    <property name="src" value="src/main/java"/>

    <target name="compile">
        <delete dir="${apt_generated}" failonerror="false"/>
        <mkdir dir="${apt_generated}"/>
        <javac fork="yes" compiler="javac1.6" debug="on" encoding="UTF-8"
            classpath="${classpath}" srcdir="${src}" destdir="${build}">
            <compilerarg line="-s ${apt_generated} -Adao.subpackage=impl -Adao.suffix=Impl" />
        </javac>
    </target>

</project>
